<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.droidevils.hired">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Hired">
        <activity android:name=".User.ProfileSetupActivity"></activity>
        <activity android:name=".User.ForgotPasswordActivity" />
        <activity android:name=".User.RegisterActivity" />
        <activity android:name=".User.LoginActivity" />
        <activity android:name=".User.DashboardActivity" />
        <activity android:name=".Common.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>