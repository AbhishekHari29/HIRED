                                android:layout_marginLeft="20dp"
                                android:text="@string/education_institution"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
